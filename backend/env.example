# EDURFID Environment Configuration
# Copy this file to .env and update with your actual values

# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,colegiospuno.com

# Database Configuration
# For development (SQLite) - Default
DATABASE_URL=sqlite:///db.sqlite3

# For production (MySQL) - Uncomment and configure as needed
# DATABASE_URL=mysql://username:password@localhost:3306/edurfid
# Or individual settings:
# DB_ENGINE=django.db.backends.mysql
# DB_NAME=edurfid
# DB_USER=STATIC_ROOT
# DB_PASSWORD=12345
# DB_HOST=localhost
# DB_PORT=3306

# API Configuration
API_BASE_URL=http://localhost:8000/api

# Email Configuration (for notifications)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# JWT Settings
JWT_ACCESS_TOKEN_LIFETIME=24
JWT_REFRESH_TOKEN_LIFETIME=168

# Offline Sync Settings
OFFLINE_SYNC_ENABLED=True
OFFLINE_DB_PATH=offline_db.sqlite3

# Hardware Settings
SERIAL_PORT=/dev/ttyUSB0
SERIAL_BAUDRATE=9600
RFID_TIMEOUT=1

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/edurfid.log

# Static Files
STATIC_URL=/static/
STATIC_ROOT=staticfiles/
MEDIA_URL=/media/
MEDIA_ROOT=media/

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Production Settings (uncomment for production)
# DEBUG=False
# ALLOWED_HOSTS=colegiospuno.com,www.colegiospuno.com
# DATABASE_URL=mysql://edurfid_user:secure_password@localhost:3306/edurfid
# EMAIL_HOST_USER=noreply@colegiospuno.com
# CORS_ALLOWED_ORIGINS=https://colegiospuno.com

# Security Settings (for production)
# SECURE_SSL_REDIRECT=True
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True
# SECURE_CONTENT_TYPE_NOSNIFF=True
# SECURE_BROWSER_XSS_FILTER=True
# X_FRAME_OPTIONS=DENY
# SECURE_REFERRER_POLICY=strict-origin-when-cross-origin

# Monitoring (optional)
# SENTRY_DSN=your-sentry-dsn-here
